# BSC Deployment Configuration
# Copy this file to .env and fill in your values

# Wallet Configuration
MNEMONIC="your twelve word mnemonic phrase here for truffle deployment"
PRIVATE_KEY="0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef"

# BSC API Keys
BSC_API_KEY="your_bscscan_api_key_here"

# Network Configuration
BSC_MAINNET_RPC="https://bsc-dataseed1.binance.org"
BSC_TESTNET_RPC="https://data-seed-prebsc-1-s1.binance.org:8545"

# Contract Configuration
FEE_WALLET_MAINNET="0x742d35Cc6634C0532925a3b8D4C9db96C4b4d8b6"
FEE_WALLET_TESTNET="0x742d35Cc6634C0532925a3b8D4C9db96C4b4d8b6"

# Gas Configuration
BSC_MAINNET_GAS_PRICE="5000000000"  # 5 gwei
BSC_TESTNET_GAS_PRICE="10000000000" # 10 gwei
GAS_LIMIT="8000000"

# Security
ENABLE_EMERGENCY_FUNCTIONS="false"
MAX_FEE_PERCENTAGE="20"

# API Configuration
API_PORT="3001"
WEBHOOK_API_KEY="your_webhook_api_key_here"
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Monitoring
ENABLE_GAS_REPORTING="true"
ENABLE_CONTRACT_SIZE_REPORTING="true"